<Window x:Class="integrated_production_management.ChangeWarehouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить склад" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Материал:" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" Name="txtMaterialName" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Текущий склад:" FontWeight="Bold"/>
        <TextBlock Grid.Row="3" Name="txtCurrentWarehouse" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Новый склад:" FontWeight="Bold"/>
        <ComboBox Grid.Row="5" Name="cmbWarehouses" DisplayMemberPath="title" 
                  SelectedValuePath="id_warehouse" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="btnSave_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Отмена" Click="btnCancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>