<Page x:Class="integrated_production_management.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:integrated_production_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="tbUsername"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="tbPassword"/>
            <TextBlock Text="Сотрудник"/>
            <ComboBox x:Name="cbEmployee" DisplayMemberPath="first_name" SelectedValuePath="id_employee"/>
            <TextBlock Text="Роль"/>
            <ComboBox x:Name="cbRole" DisplayMemberPath="title" SelectedValuePath="id_role"/>

            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnRegister" Margin="5,15,5,5" Content="Зарегистрироваться" Click="btnRegister_Click" Width="136"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>