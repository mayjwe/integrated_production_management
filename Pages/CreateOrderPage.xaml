<Page x:Class="integrated_production_management.Pages.CreateOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание заказа">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Клиент:" Margin="0,0,0,5"/>
            <TextBox Name="txtClient" Margin="0,0,0,10"/>

            <TextBlock Text="Продукт:" Margin="0,0,0,5"/>
            <ComboBox Name="cbProduct" Margin="0,0,0,10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=name}"/>
                            <TextBlock Text="{Binding Path=article}" Foreground="Gray" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Количество:" Margin="0,0,0,5"/>
            <TextBox Name="txtQuantity" Margin="0,0,0,10"/>

            <TextBlock Text="Приоритет:" Margin="0,0,0,5"/>
            <ComboBox Name="cbPriority" Margin="0,0,0,10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=title}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Дедлайн:" Margin="0,0,0,5"/>
            <DatePicker Name="dpDeadline" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnSave" Content="Создать" Click="btnSave_Click" Width="100" Margin="0,0,10,0"/>
                <Button Name="btnCancel" Content="Отмена" Click="btnCancel_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>