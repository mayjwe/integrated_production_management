<Page x:Class="integrated_production_management.Pages.PurchasesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:integrated_production_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button x:Name="btnAddPartner" Content="Создать закупку" Click="btnAddPartner_Click" Width="168"/>
        </StackPanel>

        <ListView Grid.Row="1" Name="ListViewRequest" MouseDoubleClick="ListViewRequest_MouseDoubleClick" d:ItemsSource="{d:SampleData ItemCount=1}" Margin="5">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Закупка №" FontSize="18"/>
                                    <TextBlock Text="{Binding id_purchase_order}" FontSize="18"/>
                                    <TextBlock Text="|" FontSize="18"/>
                                    <TextBlock Text="{Binding Supplier.name}" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="{Binding PurchaseOrderDetail[0].conditions, FallbackValue=Нет условий}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>