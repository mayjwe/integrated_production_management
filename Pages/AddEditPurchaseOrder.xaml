<Page x:Class="integrated_production_management.Pages.AddEditPurchaseOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:integrated_production_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Создать заказ на закупку">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Поставщик:"/>
            <ComboBox Name="cbSupplier" DisplayMemberPath="name" SelectedValuePath="id_supplier" Margin="0,0,0,10"/>

            <TextBlock Text="Материалы для закупки:" FontWeight="Bold" Margin="0,10,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox Name="cbMaterial" DisplayMemberPath="name" Width="150" Margin="0,0,5,0"/>
                <TextBox Name="txtQuantity" Width="60" Text="1" Margin="0,0,5,0" ToolTip="Количество"/>
                <TextBox Name="txtUnitPrice" Width="70" Text="0" Margin="0,0,5,0" ToolTip="Цена за единицу"/>
                <TextBox Name="txtConditions" Width="120" Text="" Margin="0,0,5,0" ToolTip="Условия (срок, скидка, мин. партия)"/>
                <Button Name="btnAddMaterial" Content="Добавить" Click="btnAddMaterial_Click" Width="70"/>
            </StackPanel>

            <ListView Name="lvMaterials" Height="150" Margin="0,0,0,10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Material.name}" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding quantity}" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding unit_price, StringFormat={}{0:C}}" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding conditions}" Grid.Column="3" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <Button Content="Удалить" Grid.Column="4" Margin="5,0,0,0" 
                                    Tag="{Binding}" Click="DeleteMaterialButton_Click" Width="60"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Сохранить заказ" Click="btnSave_Click" Width="120" Margin="0,0,5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>