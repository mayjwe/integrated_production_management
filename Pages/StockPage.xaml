<Page x:Class="integrated_production_management.Pages.StockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:integrated_production_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Складской учет" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <ListView Name="lvMaterials" Margin="5" d:ItemsSource="{d:SampleData ItemCount=2}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Material.name}" FontSize="18"/>
                                    <TextBlock Text="|" FontSize="18"/>
                                    <TextBlock Text="{Binding Material.code}" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Warehouse.title, StringFormat=Склад: {0}}"/>
                                <TextBlock Text="{Binding Material.Unit.title, StringFormat=Ед. изм.: {0}}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock Text="{Binding quantity, StringFormat=Остаток: {0}}"/>
                                <TextBlock Text="{Binding Material.min_remain, StringFormat=Мин. остаток: {0}}"/>
                                <Button Content="Изменить склад" Margin="0,5,0,0" 
                                        Tag="{Binding}" Click="btnChangeWarehouse_Click" Width="120"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>