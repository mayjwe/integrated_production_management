<Page x:Class="integrated_production_management.Pages.AddEditEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:integrated_production_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить/Редактировать сотрудника">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="Табельный номер:"/>
            <TextBox Name="txtServiceNumber" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:"/>
            <TextBox Name="txtLastName" Margin="0,0,0,10"/>

            <TextBlock Text="Имя:"/>
            <TextBox Name="txtFirstName" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество:"/>
            <TextBox Name="txtMiddleName" Margin="0,0,0,10"/>

            <TextBlock Text="Должность:"/>
            <ComboBox Name="cbPosition" DisplayMemberPath="title" SelectedValuePath="id_position" Margin="0,0,0,10"/>

            <TextBlock Text="Отдел:"/>
            <ComboBox Name="cbDepartment" DisplayMemberPath="title" SelectedValuePath="id_department" Margin="0,0,0,10"/>

            <TextBlock Text="Квалификация:"/>
            <TextBox Name="txtQualification" Margin="0,0,0,10"/>

            <TextBlock Text="Ставка:"/>
            <ComboBox Name="cbRate" DisplayMemberPath="title" SelectedValuePath="id_rate" Margin="0,0,0,10"/>

            <TextBlock Text="Статус:"/>
            <ComboBox Name="cbStatus" DisplayMemberPath="title" SelectedValuePath="id_status_employee" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Width="100" Margin="0,0,5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>